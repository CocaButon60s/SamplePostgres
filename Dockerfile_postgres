FROM postgres:17.5

ARG TESTER1_PSWD
ARG TESTER2_PSWD
ARG TESTER3_PSWD

COPY <<EOF /docker-entrypoint-initdb.d/init.sql
CREATE USER tester1 WITH PASSWORD '${TESTER1_PSWD}' CREATEDB;
CREATE USER tester2 WITH PASSWORD '${TESTER2_PSWD}' CREATEDB;
CREATE USER tester3 WITH PASSWORD '${TESTER3_PSWD}' CREATEDB;

EOF
